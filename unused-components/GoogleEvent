  googleEvent = (event, category, label) => {
    window.gtag("event", event, {
      event_category: category,
      event_label: label
    });
  };

onClick={this.googleEvent(
  "clickOnFacebook",
  "clicks",
  "Someone clicked on Facebook"
)}

onClick={this.googleEvent(
  "clickOnLinkedin",
  "clicks",
  "Someone clicked on Linkedin"
)}